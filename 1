#include <iostream>
using namespace std;
int main()
{
	int c = 0;
	cout << "Enter the amount of elements: ";
	int i, N, j = 0, tf = 0; 
	cin >> N;
	cout << "Enter the array: \n";
	int* array = new int[N];
	int* barray = new int[N];
	int* carray = new int[N];
	for (i = 0; i < N; i++) {
		cin >> array[i];
	}
	for (i = 0; i < N; i++) {
		barray[i]=1;
	}
	carray[0] = array[0];
	for (i = 0; i < N-1; i++) {
		if (array[i] != array[i + 1]) {
			carray[j] = array[i];
			tf = j+1;
			j++;
		}
		else {
			barray[j]++;
			
		}
	}
	if (array[N - 1] == array[N - 2]) {
				carray[j] = array[N - 1];
	}
	else {
		carray[j] = array[N - 1];
		barray[j] = 1;
	}
	
	cout << endl<< "elements" << endl;
	for (i = 0; i <=j; i++) {
		cout << carray[i] << " ";
	
	}
	cout << "\nlength" << endl;
	for (i = 0; i <=j; i++) {
		cout << barray[i] << " ";
	}


}
